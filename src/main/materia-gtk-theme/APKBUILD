	_install_variant "Materia-compact" "chrome"
}

_compact_xfwm4() {
	pkgdesc="Compact Materia GTK theme for XFWM4"
	install_if="$pkgname-compact=$pkgver-r$pkgrel xfwm4"

	_install_variant "Materia-compact" "xfwm4"
}


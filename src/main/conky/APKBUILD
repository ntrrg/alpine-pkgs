# This file is based on the original Conky APKBUILD file from Alpine Aports
# Maintainer: Miguel Angel Rivera Notararigo <ntrrgx@gmail.com>
pkgname=conky
pkgver=1.12.2
pkgrel=0
pkgdesc="An advanced, highly configurable system monitor for X based on torsmo"
url="https://github.com/brndnmtthws/conky"
arch="all"
license="custom"
makedepends="
	alsa-lib-dev
	cmake
	gawk
	glib-dev
	imlib2-dev
	libpulse
	libxdamage-dev
	libxext-dev
	libxft-dev
	libxinerama-dev
	libxml2-dev
	linux-headers
	lua5.3-dev
	ncurses-dev
	pulseaudio-dev
	wireless-tools-dev
"
source="$pkgname-$pkgver.tar.gz::https://github.com/brndnmtthws/conky/archive/v$pkgver.tar.gz"
subpackages="$pkgname-doc"
options="!check" # no tests

prepare() {
	default_prepare

	sed -i -e '32 iinclude(CheckIncludeFile)' "CMakeLists.txt"
}

build() {
	cmake . \
		-DRELEASE=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX="/usr" \
		-DBUILD_APCUPSD=ON \
		-DBUILD_ARGB=ON \
		-DBUILD_AUDACIOUS=OFF \
		-DBUILD_BUILTIN_CONFIG=ON \
		-DBUILD_CMUS=OFF \
		-DBUILD_CURL=OFF \
		-DBUILD_HDDTEMP=ON \
		-DBUILD_HTTP=OFF \
		-DBUILD_I18N=OFF \
		-DBUILD_IBM=ON \
		-DBUILD_ICAL=OFF \
		-DBUILD_ICONV=OFF \
		-DBUILD_IMLIB2=ON \
		-DBUILD_IOSTATS=ON \
		-DBUILD_IPV6=ON \
		-DBUILD_IRC=OFF \
		-DBUILD_JOURNAL=OFF \
		-DBUILD_LUA_CAIRO=OFF \
		-DBUILD_LUA_IMLIB2=OFF \
		-DBUILD_LUA_RSVG=OFF \
		-DBUILD_MATH=OFF \
		-DBUILD_MOC=OFF \
		-DBUILD_MPD=OFF \
		-DBUILD_MYSQL=OFF \
		-DBUILD_NCURSES=OFF \
		-DBUILD_NVIDIA=OFF \
		-DBUILD_OLD_CONFIG=OFF \
		-DBUILD_PORT_MONITORS=ON \
		-DBUILD_PULSEAUDIO=ON \
		-DBUILD_RSS=OFF \
		-DBUILD_WEATHER_METAR=OFF \
		-DBUILD_WLAN=ON \
		-DBUILD_X11=ON \
		-DBUILD_XDAMAGE=ON \
		-DBUILD_XDBE=ON \
		-DBUILD_XFT=ON \
		-DBUILD_XINERAMA=ON \
		-DBUILD_XMMS2=OFF \
		-DBUILD_XSHAPE=ON \
		-DOWN_WINDOW=ON

	make
}

package() {
	make DESTDIR="$pkgdir" install
	install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="55280953da437efe36320e4c12f74d95b8406bd7d8b7d93c6582f9b346c1c80a94b71d1c27860f6274de9171865fca91e330dfc39feb80bb2f453a538bc5ce1a  conky-1.12.2.tar.gz"
